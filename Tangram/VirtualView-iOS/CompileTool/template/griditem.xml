<?xml version="1.0" encoding="utf-8"?>
<VHLayout
        layoutHeight="180"
        layoutWidth="match_parent"
        orientation="V"
        background="#FFFFFF"
        borderColor="#808080"
        borderWidth="0.5"
        paddingLeft="0.5"
        paddingRight="0.5"
        paddingBottom="0.5"
        paddingTop="0.5"
        layoutGravity="v_center|h_center"
        flag="flag_clickable|flag_longclickable"
        action="${action}">
    <NImage
            src="${imgUrl}"
            layoutWidth="match_parent"
            layoutHeight="150" />
    <NText
            text="${title}"
            textSize="12"
            gravity="h_center"
            layoutWidth="match_parent"
            layoutHeight="30"/>
</VHLayout>