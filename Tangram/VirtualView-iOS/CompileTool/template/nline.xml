<?xml version="1.0" encoding="utf-8"?>
<VHLayout
        orientation="V"
        layoutWidth="750rp"
        layoutHeight="match_parent"
        background="#FFFFFF">

    <VText
            text="井"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"/>
    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="300">
        <NLine
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                paddingLeft="50"
                paintWidth="1"
                orientation="V"
                color="#0000FF"/>
        <NLine
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                paddingRight="50"
                gravity="right"
                paintWidth="1"
                orientation="V"
                color="#FF0000"/>
        <NLine
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                paddingTop="50"
                paintWidth="1"
                orientation="H"
                color="#0000FF"/>
        <NLine
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                gravity="bottom"
                paddingBottom="50"
                paintWidth="1"
                orientation="H"
                color="#FF0000"/>
    </FrameLayout>

    <VText
            text="十"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            textStyle="bold"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"/>
    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="300">
        <NLine
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                gravity="h_center"
                paintWidth="10"
                orientation="V"
                color="#FF0000"/>
        <NLine
                layoutWidth="match_parent"
                layoutHeight="match_parent"
                gravity="v_center"
                paintWidth="10"
                orientation="H"
                color="#0000FF"/>
    </FrameLayout>

    <VText
            text="paintWidth = 0.5 / 0.33"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"/>
    <NLine
            layoutWidth="match_parent"
            layoutHeight="1"
            paintWidth="0.5"
            layoutMarginTop="5"
            layoutMarginBottom="5"
            color="#FF0000"/>
    <NLine
            layoutWidth="match_parent"
            layoutHeight="1"
            paintWidth="0.33"
            layoutMarginTop="5"
            layoutMarginBottom="5"
            color="#0000ff"/>

    <VText
            text="dash (not supported)"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"/>
    <NLine
            layoutWidth="match_parent"
            layoutHeight="1"
            layoutMarginTop="5"
            layoutMarginBottom="5"
            paintWidth="1"
            orientation="H"
            style="dash"
            dashEffect="[3,5,3,5]"
            color="#0000ff"/>
    <NLine
            layoutWidth="match_parent"
            layoutHeight="1"
            layoutMarginTop="5"
            layoutMarginBottom="5"
            style="dash"
            dashEffect="[5,3,1,3]"
            color="#0000ff"/>

</VHLayout>