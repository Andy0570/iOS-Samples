<?xml version="1.0" encoding="utf-8"?>
<VHLayout
        layoutWidth="750rp"
        layoutHeight="wrap_content"
        flag="flag_clickable|flag_longclickable"
        orientation="V"
        background="#FFFFFF">
    <NText
            text="clickable"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"/>
    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="300">
        <NText
                text="A: bottom"
                textSize="12"
                background="#80ff0000"
                layoutWidth="250"
                layoutHeight="180"
                layoutGravity="top|left"
                gravity="h_center"
                flag="flag_clickable|flag_longclickable"
                action="actionA"/>
        <NText
                text="B: center"
                textSize="12"
                background="#8000ff00"
                layoutWidth="250"
                layoutHeight="180"
                layoutGravity="top|right"
                gravity="h_center"
                flag="flag_clickable|flag_longclickable"
                action="actionB"/>
        <NText
                text="C: top"
                textSize="12"
                background="#800000ff"
                layoutWidth="250"
                layoutHeight="180"
                layoutGravity="bottom|h_center"
                gravity="h_center"
                flag="flag_clickable|flag_longclickable"
                action="actionC"/>
    </FrameLayout>

    <NText
            text="data binding"
            textSize="12"
            textColor="#333333"
            paddingLeft="5"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"/>
    <GridLayout
            layoutWidth="match_parent"
            layoutHeight="200"
            paddingLeft="20"
            paddingTop="10"
            paddingRight="20"
            paddingBottom="10"
            background="#ffeeee"
            itemHorizontalMargin="5"
            colCount="3"
            itemHeight="180">
        <VHLayout
                layoutHeight="180"
                layoutWidth="match_parent"
                orientation="V"
                background="#FFFFFF"
                borderColor="#808080"
                borderWidth="0.5"
                paddingLeft="0.5"
                paddingRight="0.5"
                paddingBottom="0.5"
                paddingTop="0.5"
                layoutGravity="v_center|h_center">
            <NImage
                    src="${content[0].imgUrl}"
                    layoutWidth="match_parent"
                    layoutHeight="150" />
            <NText
                    text="${content[0].title}"
                    textSize="12"
                    gravity="h_center"
                    layoutWidth="match_parent"
                    layoutHeight="30"/>
        </VHLayout>
        <VHLayout
                layoutHeight="180"
                layoutWidth="match_parent"
                orientation="V"
                background="#FFFFFF"
                borderColor="#808080"
                borderWidth="0.5"
                paddingLeft="0.5"
                paddingRight="0.5"
                paddingBottom="0.5"
                paddingTop="0.5"
                layoutGravity="v_center|h_center">
            <NImage
                    src="${content[1].imgUrl}"
                    layoutWidth="match_parent"
                    layoutHeight="150" />
            <NText
                    text="${content[1].title}"
                    textSize="12"
                    gravity="h_center"
                    layoutWidth="match_parent"
                    layoutHeight="30"/>
        </VHLayout>
        <VHLayout
                layoutHeight="180"
                layoutWidth="match_parent"
                orientation="V"
                background="#FFFFFF"
                borderColor="#808080"
                borderWidth="0.5"
                paddingLeft="0.5"
                paddingRight="0.5"
                paddingBottom="0.5"
                paddingTop="0.5"
                layoutGravity="v_center|h_center">
            <NImage
                    src="${content[2].imgUrl}"
                    layoutWidth="match_parent"
                    layoutHeight="150" />
            <NText
                    text="${content[2].title}"
                    textSize="12"
                    gravity="h_center"
                    layoutWidth="match_parent"
                    layoutHeight="30"/>
        </VHLayout>
    </GridLayout>
</VHLayout>