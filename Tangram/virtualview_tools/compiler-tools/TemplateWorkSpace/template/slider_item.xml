<VHLayout
    flag="flag_exposure|flag_clickable"
    action="action"
    orientation="V"
    layoutWidth="227rp"
    layoutHeight="285rp">
    <VHLayout
        layoutHeight="227rp"
        layoutWidth="227rp"
        background="#FFFFFF">
        <NImage
            id="5"
            src="${imgUrl}"
            scaleType="center_crop"
            layoutGravity="v_center|h_center"
            layoutWidth="match_parent"
            layoutHeight="match_parent"
            paddingTop="@{${hasImgPadding} ? 10 : 0 }"
            paddingRight="@{${hasImgPadding} ? 10 : 0 }"
            paddingBottom="@{${hasImgPadding} ? 10 : 0 }"
            paddingLeft="@{${hasImgPadding} ? 10 : 0 }"/>
    </VHLayout>
    <VHLayout
        id="3"
        dataTag="titleBar"
        orientation="V"
        gravity="v_center|h_center"
        background="${bgColor}"
        layoutHeight="58rp"
        layoutWidth="227rp" >
        <VHLayout
            id="999"
            orientation="H"
            layoutGravity="v_center|h_center"
            layoutHeight="42rp"
            layoutWidth="wrap_content" >
            <VText
                layoutGravity="h_center|v_center"
                gravity="v_center|h_center"
                id="4"
                text="${title}"
                textColor="#000000"
                textSize="14"
                layoutHeight="match_parent"
                layoutWidth="wrap_content" />
        </VHLayout>
    </VHLayout>
</VHLayout>
