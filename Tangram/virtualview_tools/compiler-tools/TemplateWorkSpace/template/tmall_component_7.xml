<FrameLayout
    action="action"
    borderColor="#DADBD8"
    borderWidth="1"
    background="#F2F2F2"
    flag="flag_exposure|flag_clickable"
    layoutHeight="wrap_content"
    layoutWidth="345rp"
    autoDimDirection="X"
    autoDimX="335"
    autoDimY="639">
    <NImage
        src="${bgImgUrl}"
        layoutHeight="match_parent"
        layoutWidth="match_parent"/>
    <VHLayout
            layoutHeight="match_parent"
            layoutWidth="match_parent"
            paddingTop="20"
            paddingLeft="20"
            paddingRight="20"
            paddingBottom="20"
            orientation="V">
        <VH2Layout
                layoutHeight="wrap_content"
                layoutWidth="130"
                layoutGravity="h_center"
                orientation="H">
            <NLine
                    layoutWidth="27"
                    layoutHeight="2"
                    layoutGravity="left|v_center"
                    color="#CBCBCB"/>
            <NText
                    layoutWidth="wrap_content"
                    layoutHeight="wrap_content"
                    text="${title}"
                    textSize="14"
                    textColor="#000000"
                    layoutGravity="v_center"
                    paddingLeft="9"
                    paddingRight="9"
                    textStyle="bold"
                    lines="1"
                    ellipsize="end"/>
            <NLine
                    layoutWidth="27"
                    layoutHeight="2"
                    layoutGravity="right|v_center"
                    layoutDirection="right"
                    color="#CBCBCB"/>
        </VH2Layout>

        <NText
                flag="flag_exposure|flag_clickable"
                action="item1Action"
                layoutWidth="130"
                layoutHeight="33"
                layoutMarginTop="24"
                background="#FFFFFF"
                borderColor="#C7C7C7"
                gravity="v_center|h_center"
                layoutGravity="h_center"
                borderWidth="0.5"
                text="${item1Title}"
                textSize="12"
                textColor="#3D4245"
                lines="1"
                ellipsize="end"
                visibility="@{${item1Title} ? visible : gone }"/>
        <NText
                flag="flag_exposure|flag_clickable"
                action="item2Action"
                layoutWidth="130"
                layoutHeight="33"
                layoutMarginTop="15"
                background="#FFFFFF"
                borderColor="#C7C7C7"
                gravity="v_center|h_center"
                layoutGravity="h_center"
                borderWidth="0.5"
                text="${item2Title}"
                textSize="12"
                textColor="#3D4245"
                lines="1"
                ellipsize="end"
                visibility="@{${item2Title} ? visible : gone }"/>
        <NText
                flag="flag_exposure|flag_clickable"
                action="item3Action"
                layoutWidth="130"
                layoutHeight="33"
                layoutMarginTop="15"
                background="#FFFFFF"
                borderColor="#C7C7C7"
                gravity="v_center|h_center"
                layoutGravity="h_center"
                borderWidth="0.5"
                text="${item3Title}"
                textSize="12"
                textColor="#3D4245"
                lines="1"
                ellipsize="end"
                visibility="@{${item3Title} ? visible : gone }"/>
        <NText
                flag="flag_exposure|flag_clickable"
                action="item4Action"
                layoutWidth="130"
                layoutHeight="33"
                layoutMarginTop="15"
                background="#FFFFFF"
                borderColor="#C7C7C7"
                gravity="v_center|h_center"
                layoutGravity="h_center"
                borderWidth="0.5"
                text="${item4Title}"
                textSize="12"
                textColor="#3D4245"
                lines="1"
                ellipsize="end"
                visibility="@{${item4Title} ? visible : gone }"/>
        <NText
                flag="flag_exposure|flag_clickable"
                action="item5Action"
                layoutWidth="130"
                layoutHeight="33"
                layoutMarginTop="15"
                background="#FFFFFF"
                borderColor="#C7C7C7"
                gravity="v_center|h_center"
                layoutGravity="h_center"
                borderWidth="0.5"
                text="${item5Title}"
                textSize="12"
                textColor="#3D4245"
                lines="1"
                ellipsize="end"
                visibility="@{${item5Title} ? visible : gone }"/>

    </VHLayout>

</FrameLayout>
