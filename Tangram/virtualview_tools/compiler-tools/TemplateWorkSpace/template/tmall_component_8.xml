<FrameLayout
        flag="flag_exposure|flag_clickable"
        action="action"
        background="#ECE5D3"
        layoutWidth="345rp"
        layoutHeight="wrap_content"
        autoDimDirection="X"
        paddingTop="3"
        paddingRight="3"
        paddingBottom="3"
        paddingLeft="3"
        autoDimX="335"
        autoDimY="639">
    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="wrap_content">
        <GridLayout
                colCount="2"
                layoutWidth="match_parent"
                layoutHeight="wrap_content"
                itemHorizontalMargin="5"
                itemVerticalMargin="5"
                background="#FFFFFF"
                paddingTop="7"
                paddingRight="7"
                paddingBottom="7"
                paddingLeft="7">
            <NImage
                    layoutWidth="match_parent"
                    layoutHeight="70"
                    scaleType="center_crop"
                    visibility="@{${data[0]} ? visible : gone }"
                    src="${data[0]}"/>
            <NImage
                    layoutWidth="match_parent"
                    layoutHeight="70"
                    scaleType="center_crop"
                    visibility="@{${data[1]} ? visible : gone }"
                    src="${data[1]}"/>
            <NImage
                    layoutWidth="match_parent"
                    layoutHeight="70"
                    scaleType="center_crop"
                    visibility="@{${data[2]} ? visible : gone }"
                    src="${data[2]}"/>
            <NImage
                    layoutWidth="match_parent"
                    layoutHeight="70"
                    scaleType="center_crop"
                    visibility="@{${data[3]} ? visible : gone }"
                    src="${data[3]}"/>
            <NImage
                    layoutWidth="match_parent"
                    layoutHeight="70"
                    scaleType="center_crop"
                    visibility="@{${data[4]} ? visible : gone }"
                    src="${data[4]}"/>
            <NImage
                    layoutWidth="match_parent"
                    layoutHeight="70"
                    scaleType="center_crop"
                    visibility="@{${data[5]} ? visible : gone }"
                    src="${data[5]}"/>
        </GridLayout>
        <NImage
                layoutWidth="match_parent"
                layoutHeight="wrap_content"
                src="tk_recommend_toplist_mask_image"/>
    </FrameLayout>

    <VHLayout
            layoutWidth="match_parent"
            layoutHeight="wrap_content"
            visibility="@{${switch} ? visible : invisible }"
            paddingTop="8"
            paddingBottom="8"
            background="#ECE5D3"
            layoutGravity="bottom"
            orientation="V">
        <NText
                layoutWidth="match_parent"
                layoutHeight="wrap_content"
                paddingLeft="10"
                paddingRight="10"
                text="${title}"
                textSize="13"
                textStyle="bold"
                textColor="#232323"
                layoutGravity="h_center"
                maxLines="2"
                ellipsize="end"/>
        <VHLayout
                layoutWidth="match_parent"
                layoutHeight="wrap_content"
                paddingTop="3"
                orientation="H">
            <NText
                    layoutWidth="wrap_content"
                    layoutHeight="wrap_content"
                    paddingLeft="10"
                    paddingRight="3"
                    text="${subTitle}"
                    textSize="12"
                    textColor="#232323"
                    maxLines="1"
                    layoutGravity="v_center"/>
            <NImage
                    layoutWidth="11"
                    layoutHeight="12"
                    layoutGravity="v_center"
                    src="tk_component_toplist_double_arrow"/>

        </VHLayout>
    </VHLayout>
    <NImage
            layoutWidth="35.5"
            layoutHeight="54.5"
            layoutMarginTop="-3"
            layoutGravity="left|top"
            layoutMarginLeft="7"
            scaleType="center_crop"
            src="${logoUrl}"/>
</FrameLayout>
