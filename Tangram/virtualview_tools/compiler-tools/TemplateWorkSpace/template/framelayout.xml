<VHLayout
        flag="flag_exposure|flag_clickable"
        orientation="V"
        layoutWidth="match_parent"
        layoutHeight="match_parent"
>
    <VText
            text="Title: overlay"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="200"
        >
        <VGraph
                layoutWidth="wrap_content"
                layoutHeight="wrap_content"
                diameterX="150"
                diameterY="150"
                type="circle"
                color="#0000FF" />

        <VGraph
                layoutWidth="wrap_content"
                layoutHeight="wrap_content"
                diameterX="100"
                diameterY="100"
                type="circle"
                color="#0088FF" />

        <VGraph
                layoutWidth="wrap_content"
                layoutHeight="wrap_content"
                diameterX="50"
                diameterY="50"
                type="circle"
                color="#8888FF" />
    </FrameLayout>

    <VText
            text="Title: child layoutGravity = left,right,top,bottom..."
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="250"
    >
        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#0000FF"
                textSize="12"
                gravity="v_center|h_center"
                text="default position" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#0088FF"
                layoutGravity="right"
                textSize="12"
                gravity="v_center|h_center"
                text="layoutGravity=right" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#8888FF"
                layoutGravity="right|bottom"
                textSize="12"
                gravity="v_center|h_center"
                text="layoutGravity=right|bottom" />

        <VText
                layoutWidth="150"
                layoutHeight="150"
                background="#FF8888"
                layoutGravity="left|bottom"
                textSize="12"
                gravity="v_center|h_center"
                text="layoutGravity=left|bottom" />

        <VText
                layoutWidth="100"
                layoutHeight="100"
                background="#FF8800"
                layoutGravity="v_center|h_center"
                textSize="12"
                gravity="v_center|h_center"
                text="center" />
    </FrameLayout>

</VHLayout>