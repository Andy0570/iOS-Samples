<VHLayout
        flag="flag_exposure|flag_clickable"
        orientation="V"
        layoutWidth="match_parent"
        layoutHeight="match_parent"
>
    <VText
            text="Title: orientation = H | layoutDirection = l r"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VH2Layout
            layoutWidth="match_parent"
            layoutHeight="200"
            orientation="H"
        >
        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#0000FF"
                textSize="12"
                gravity="v_center|h_center"
                text="1" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#0088FF"
                textSize="12"
                gravity="v_center|h_center"
                text="2" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#8888FF"
                textSize="12"
                gravity="v_center|h_center"
                text="3" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#88FFFF"
                textSize="12"
                gravity="v_center|h_center"
                layoutDirection="right"
                text="4" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#FFFFFF"
                textSize="12"
                gravity="v_center|h_center"
                layoutDirection="right"
                text="5" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#FFFF88"
                textSize="12"
                gravity="v_center|h_center"
                layoutDirection="right"
                text="6" />

    </VH2Layout>

    <VText
            text="Title: orientation = V | layoutDirection = t b"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VH2Layout
            layoutWidth="match_parent"
            layoutHeight="400"
            orientation="V"
    >
        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#0000FF"
                textSize="12"
                gravity="v_center|h_center"
                layoutDirection="top"
                text="1" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#0088FF"
                textSize="12"
                gravity="v_center|h_center"
                layoutDirection="top"
                text="2" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#8888FF"
                textSize="12"
                gravity="v_center|h_center"
                layoutDirection="top"
                text="3" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#88FFFF"
                textSize="12"
                gravity="v_center|h_center"
                layoutDirection="bottom"
                text="4" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#FFFFFF"
                textSize="12"
                gravity="v_center|h_center"
                layoutDirection="bottom"
                text="5" />

        <VText
                layoutWidth="50"
                layoutHeight="50"
                background="#FFFF88"
                textSize="12"
                gravity="v_center|h_center"
                layoutDirection="bottom"
                text="6" />

    </VH2Layout>

</VHLayout>