<VHLayout
        action="action"
        orientation="V"
        autoDimDirection="X"
        autoDimX="231"
        autoDimY="325"
        dataTag="container"
        flag="flag_exposure|flag_clickable"
        layoutHeight="wrap_content"
        layoutWidth="match_parent"
        background="white">

    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="wrap_content"
            autoDimDirection="X"
            autoDimX="1"
            autoDimY="1">
        <NImage
                id="1"
                src="${imgUrl}"
                layoutHeight="match_parent"
                layoutWidth="match_parent"/>
    </FrameLayout>
    <VText
            text="${title}"
            layoutHeight="wrap_content"
            layoutMarginTop="20rp"
            layoutMarginLeft="25rp"
            layoutWidth="wrap_content"
            textColor="${style.onePlusThreetextColor}"
            textSize="11"/>

    <VText
            text="${price}"
            layoutHeight="wrap_content"
            layoutMarginTop="4rp"
            layoutMarginBottom="4rp"
            layoutMarginLeft="25rp"
            layoutWidth="wrap_content"
            textColor="#FF0036"
            textSize="11"/>
</VHLayout>