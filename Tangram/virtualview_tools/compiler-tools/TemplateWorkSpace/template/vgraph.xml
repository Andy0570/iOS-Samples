<VHLayout
        flag="flag_exposure|flag_clickable"
        orientation="V"
        layoutWidth="match_parent"
        layoutHeight="match_parent"
>
    <VText
            text="Title: color = #0000FF | type = circle | diameterX,diameterY = 200"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VGraph
            layoutWidth="match_parent"
            layoutHeight="wrap_content"
            diameterX="200"
            diameterY="200"
            type="circle"
            color="#0000FF" />

    <VText
        text="Title: type = circle | width,height = 200"
        textSize="12"
        textColor="#333333"
        background="#008899"
        layoutWidth="match_parent"
        layoutHeight="20" />

    <VGraph
            layoutWidth="200"
            layoutHeight="200"
            type="circle"
            color="#0000FF" />

    <VText
            text="Title: type = circle | paintStyle = stroke | width,height = 200"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VGraph
            layoutWidth="200"
            layoutHeight="200"
            paintStyle="stroke"
            paintWidth="2"
            type="circle"
            color="#0000FF" />

    <VText
            text="Title: color = #0000FF | type = rect | diameterX,diameterY = 200,100"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VGraph
            layoutWidth="match_parent"
            layoutHeight="wrap_content"
            diameterX="200"
            diameterY="100"
            type="rect"
            color="#0000FF" />

    <VText
            text="Title: type = rect | width,height = 200"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VGraph
            layoutWidth="200"
            layoutHeight="200"
            type="rect"
            color="#0000FF" />

    <VText
            text="Title: type = rect | paintStyle = stroke | width,height = 200"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VGraph
            layoutWidth="200"
            layoutHeight="200"
            paintStyle="stroke"
            paintWidth="2"
            type="rect"
            color="#0000FF" />

    <VText
            text="Title: color = #0000FF | type = oval | diameterX,diameterY = 200,100"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VGraph
            layoutWidth="match_parent"
            layoutHeight="wrap_content"
            diameterX="200"
            diameterY="100"
            type="oval"
            color="#0000FF" />

    <VText
            text="Title: type = oval | width,height = 200,100"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VGraph
            layoutWidth="200"
            layoutHeight="100"
            type="oval"
            color="#0000FF" />

    <VText
            text="Title: type = oval | paintStyle = stroke | width,height = 200,100"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <VGraph
            layoutWidth="200"
            layoutHeight="100"
            paintStyle="stroke"
            paintWidth="2"
            type="oval"
            color="#0000FF" />

</VHLayout>