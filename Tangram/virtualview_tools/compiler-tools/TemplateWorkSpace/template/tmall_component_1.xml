<FrameLayout
        layoutWidth="340rp"
        layoutHeight="wrap_content"
        action="action"
        flag="flag_exposure|flag_clickable"
        background="#FFFFFF"
        autoDimDirection="X"
        autoDimX="340"
        autoDimY="240"
        >
    <NImage
            scaleType="fit_xy"
            layoutWidth="212.5rp"
            layoutHeight="28.5rp"
            layoutMarginTop="29rp"
            layoutMarginLeft="30rp"
            layoutGravity="top|left"
            src="${titleImgUrl}"/>
    <NImage
            scaleType="fit_xy"
            layoutWidth="143rp"
            layoutHeight="29rp"
            layoutMarginTop="71rp"
            layoutMarginLeft="29rp"
            layoutGravity="top|left"
            src="${subTitleImgUrl}"/>
    <NImage
            scaleType="fit_xy"
            layoutWidth="120rp"
            layoutHeight="120rp"
            layoutMarginTop="112rp"
            layoutMarginLeft="29rp"
            layoutGravity="top|left"
            src="${leftImgUrl}"/>
    <NImage
            scaleType="fit_xy"
            layoutWidth="150rp"
            layoutHeight="150rp"
            layoutMarginTop="81rp"
            layoutMarginLeft="185rp"
            layoutGravity="top|left"
            src="${rightImgUrl}"/>
</FrameLayout>