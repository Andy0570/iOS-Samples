<VHLayout
        flag="flag_exposure|flag_clickable"
        orientation="V"
        layoutWidth="match_parent"
        layoutHeight="match_parent"
>
    <VText
            text="Title: color = #123456"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="20"
    >
        <VLine
                layoutWidth="match_parent"
                layoutHeight="wrap_content"
                layoutGravity="v_center"
                paintWidth="1"
                orientation="H"
                color="#123456" />
    </FrameLayout>


    <VText
        text="Title: orientation = H"
        textSize="12"
        textColor="#333333"
        background="#008899"
        layoutWidth="match_parent"
        layoutHeight="20" />

    <FrameLayout
        layoutWidth="match_parent"
        layoutHeight="20"
        >
        <VLine
                layoutWidth="match_parent"
                layoutHeight="wrap_content"
                layoutGravity="v_center"
                paintWidth="1"
                orientation="H"
                color="#A0D0A0" />
    </FrameLayout>

    <VText
            text="Title: orientation = V"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="50"
    >
        <VLine
                layoutWidth="1"
                layoutHeight="50"
                layoutGravity="h_center"
                paintWidth="1"
                orientation="V"
                color="#A0D0A0" />
    </FrameLayout>

    <VText
            text="Title: paintWidth = 5"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="20"
    >
        <VLine
                layoutWidth="match_parent"
                layoutHeight="wrap_content"
                layoutGravity="v_center"
                paintWidth="5"
                orientation="H"
                color="#A0D0A0" />
    </FrameLayout>

    <VText
            text="Title: style = dash | dashEffect = [6,10,6,10]"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="20"
    >
        <VLine
                layoutWidth="match_parent"
                layoutHeight="wrap_content"
                layoutGravity="v_center"
                paintWidth="2"
                orientation="H"
                style="dash"
                dashEffect="[6,10,6,10]"
                color="#A0D0A0" />
    </FrameLayout>
</VHLayout>