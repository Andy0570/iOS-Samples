<VHLayout
        flag="flag_exposure|flag_clickable"
        orientation="V"
        layoutWidth="match_parent"
        layoutHeight="match_parent"
>
    <VText
        text="Title: show click script"
        textSize="12"
        textColor="#333333"
        background="#008899"
        layoutWidth="match_parent"
        layoutHeight="20" />

    <GridLayout
            layoutWidth="match_parent"
            layoutHeight="wrap_content"
            colCount="2"
    >
        <NText
                flag="flag_exposure|flag_clickable"
                layoutWidth="match_parent"
                layoutHeight="150"
                background="#0000FF"
                textSize="12"
                gravity="v_center|h_center"
                text="ClickMe"
                onClick="${this.siblings.textColor=-1}"
        />

        <VText
                layoutWidth="match_parent"
                layoutHeight="150"
                background="#0088FF"
                textSize="12"
                gravity="v_center|h_center"
                text="1" />

        <VText
                layoutWidth="match_parent"
                layoutHeight="150"
                background="#8888FF"
                textSize="12"
                gravity="v_center|h_center"
                text="1" />

        <VText
                layoutWidth="match_parent"
                layoutHeight="150"
                background="#8888FF"
                textSize="12"
                gravity="v_center|h_center"
                text="1" />

        <VText
                layoutWidth="match_parent"
                layoutHeight="150"
                background="#8888FF"
                textSize="12"
                gravity="v_center|h_center"
                text="1" />

        <VText
                layoutWidth="match_parent"
                layoutHeight="150"
                background="#8888FF"
                textSize="12"
                gravity="v_center|h_center"
                text="1" />

    </GridLayout>

</VHLayout>